{
    "name": "Comment Mentions",
    "description": "Endpoints for managing user mentions in comments",
    "item": [
        {
            "name": "Get Comment Mentions",
            "request": {
                "method": "GET",
                "url": {
                    "raw": "{{base_url}}/api/comment-mentions/comment/123",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "comment-mentions",
                        "comment",
                        "123"
                    ]
                },
                "description": "Get all user mentions in a specific comment."
            }
        },
        {
            "name": "Get User Mentions",
            "request": {
                "method": "GET",
                "url": {
                    "raw": "{{base_url}}/api/comment-mentions/user/123",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "comment-mentions",
                        "user",
                        "123"
                    ]
                },
                "description": "Get all mentions of a specific user in comments."
            }
        },
        {
            "name": "Get Mention Count",
            "request": {
                "method": "GET",
                "url": {
                    "raw": "{{base_url}}/api/comment-mentions/comment/123/count",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "comment-mentions",
                        "comment",
                        "123",
                        "count"
                    ]
                },
                "description": "Get the total number of mentions in a specific comment."
            }
        },
        {
            "name": "Add Mention",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{access_token}}"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"comment_id\": 123,\n    \"mentioned_user_id\": 456\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/comment-mentions",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "comment-mentions"
                    ]
                },
                "description": "Add a user mention to a comment. Requires authentication."
            }
        },
        {
            "name": "Remove Mention",
            "request": {
                "method": "DELETE",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{access_token}}"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/api/comment-mentions/123/456",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "comment-mentions",
                        "123",
                        "456"
                    ]
                },
                "description": "Remove a user mention from a comment. Requires authentication."
            }
        }
    ]
}