{
    "name": "Comments",
    "description": "Endpoints for managing comments on feeds",
    "item": [
        {
            "name": "Get Feed Comments",
            "request": {
                "method": "GET",
                "url": {
                    "raw": "{{base_url}}/api/comments/feed/123",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "comments",
                        "feed",
                        "123"
                    ]
                },
                "description": "Get all comments for a specific feed."
            }
        },
        {
            "name": "Get User Comments",
            "request": {
                "method": "GET",
                "url": {
                    "raw": "{{base_url}}/api/comments/user/123",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "comments",
                        "user",
                        "123"
                    ]
                },
                "description": "Get all comments made by a specific user."
            }
        },
        {
            "name": "Search Comments",
            "request": {
                "method": "GET",
                "url": {
                    "raw": "{{base_url}}/api/comments/search?query=great",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "comments",
                        "search"
                    ],
                    "query": [
                        {
                            "key": "query",
                            "value": "great"
                        }
                    ]
                },
                "description": "Search for comments by content."
            }
        },
        {
            "name": "Get Comment",
            "request": {
                "method": "GET",
                "url": {
                    "raw": "{{base_url}}/api/comments/123",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "comments",
                        "123"
                    ]
                },
                "description": "Get detailed information about a specific comment."
            }
        },
        {
            "name": "Create Comment",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{access_token}}"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"content\": \"Great work on the project!\",\n    \"feed_id\": 123,\n    \"parent_comment_id\": null\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/comments",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "comments"
                    ]
                },
                "description": "Create a new comment on a feed. Requires authentication."
            }
        },
        {
            "name": "Update Comment",
            "request": {
                "method": "PUT",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{access_token}}"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"content\": \"Updated comment content\",\n    \"feed_id\": 123\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/comments/123",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "comments",
                        "123"
                    ]
                },
                "description": "Update an existing comment. Requires authentication and ownership."
            }
        },
        {
            "name": "Delete Comment",
            "request": {
                "method": "DELETE",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{access_token}}"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/api/comments/123",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "comments",
                        "123"
                    ]
                },
                "description": "Delete a comment. Requires authentication and ownership."
            }
        }
    ]
}