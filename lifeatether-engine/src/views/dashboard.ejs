<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Life@Ether Dashboard</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/favicon.ico" />
    <meta name="theme-color" content="#fcb813" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <style>
      :root {
        --primary-color: #fcb813;
        --secondary-color: #181b20;
        --text-color: #b0b3b8;
        --bg-color: #23262b;
        --card-bg: #2d3035;
      }
      body {
        background-color: var(--bg-color);
        color: var(--text-color);
        font-family: "Inter", sans-serif;
      }
      .card {
        background-color: var(--card-bg);
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        transition: transform 0.2s, box-shadow 0.2s;
      }
      .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
      }
      .stat-card {
        background: linear-gradient(45deg, var(--primary-color), #ffd34d);
        color: var(--secondary-color);
      }
      .stat-icon {
        font-size: 2.5rem;
        opacity: 0.9;
      }
      .chart-container {
        position: relative;
        height: 300px;
        background-color: var(--card-bg);
        border-radius: 10px;
        padding: 1rem;
      }
      .user-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid var(--primary-color);
      }
      .table {
        color: var(--text-color);
      }
      .table th {
        border-top: none;
        font-weight: 600;
        color: var(--primary-color);
      }
      .table td {
        border-color: rgba(252, 184, 19, 0.1);
      }
      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        color: var(--primary-color);
      }
      .card-title {
        color: white;
        font-weight: 600;
      }
      .dashboard-header {
        background-color: var(--secondary-color);
        padding: 2rem 0;
        margin-bottom: 2rem;
        border-bottom: 2px solid var(--primary-color);
      }
      .nav-link {
        color: var(--text-color);
        transition: all 0.3s ease;
      }
      .nav-link:hover {
        color: var(--primary-color);
      }
      .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
        color: var(--secondary-color);
      }
      .btn-primary:hover {
        background-color: #ffd34d;
        border-color: #ffd34d;
        color: var(--secondary-color);
      }
    </style>
  </head>
  <body>
    <nav
      class="navbar navbar-expand-lg navbar-dark"
      style="background-color: var(--secondary-color)"
    >
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <img src="/logo.svg" alt="EtherTech Logo" height="40" />
        </a>
        <div class="d-flex">
          <a href="/" class="btn btn-primary">Back to Home</a>
        </div>
      </div>
    </nav>

    <div class="dashboard-header">
      <div class="container">
        <h1 class="display-4 mb-3">LifeAtEther Dashboard</h1>
        <p class="lead">Monitor and analyze community engagement</p>
      </div>
    </div>

    <div class="container-fluid py-4">
      <!-- Overall Metrics -->
      <div class="row mb-4">
        <div class="col-md-3">
          <div class="card stat-card">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="card-subtitle mb-2">Total Users</h6>
                  <h2 class="card-title mb-0">
                    <%= overallMetrics.totalUsers %>
                  </h2>
                </div>
                <i class="bx bxs-user stat-icon"></i>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card stat-card">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="card-subtitle mb-2">Total Feeds</h6>
                  <h2 class="card-title mb-0">
                    <%= overallMetrics.totalFeeds %>
                  </h2>
                </div>
                <i class="bx bxs-message-dots stat-icon"></i>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card stat-card">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="card-subtitle mb-2">Total Comments</h6>
                  <h2 class="card-title mb-0">
                    <%= overallMetrics.totalComments %>
                  </h2>
                </div>
                <i class="bx bxs-comment-dots stat-icon"></i>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card stat-card">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="card-subtitle mb-2">Total Reactions</h6>
                  <h2 class="card-title mb-0">
                    <%= overallMetrics.totalFeedReactions +
                    overallMetrics.totalCommentReactions %>
                  </h2>
                </div>
                <i class="bx bxs-heart stat-icon"></i>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Activity Trends -->
      <div class="row mb-4">
        <div class="col-md-8">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Activity Trends (Last 7 Days)</h5>
              <div class="chart-container">
                <canvas id="activityChart"></canvas>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Content Insights</h5>
              <div class="chart-container">
                <canvas id="contentChart"></canvas>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Top Users and Feeds -->
      <div class="row">
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Top Users</h5>
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th>User</th>
                      <th>Feeds</th>
                      <th>Comments</th>
                      <th>Reactions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% topUsers.forEach(user => { %>
                    <tr>
                      <td>
                        <div class="d-flex align-items-center">
                          <img
                            src="<%= user.avatar || 'https://via.placeholder.com/40' %>"
                            alt="<%= user.name %>"
                            class="user-avatar me-2"
                          />
                          <%= user.name %>
                        </div>
                      </td>
                      <td><%= user.feedCount %></td>
                      <td><%= user.commentCount %></td>
                      <td><%= user.reactionCount %></td>
                    </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Top Feeds</h5>
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Author</th>
                      <th>Content</th>
                      <th>Comments</th>
                      <th>Reactions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% topFeeds.forEach(feed => { %>
                    <tr>
                      <td>
                        <div class="d-flex align-items-center">
                          <img
                            src="<%= feed.author.avatar || 'https://via.placeholder.com/40' %>"
                            alt="<%= feed.author.name %>"
                            class="user-avatar me-2"
                          />
                          <%= feed.author.name %>
                        </div>
                      </td>
                      <td><%= feed.content.substring(0, 50) %>...</td>
                      <td><%= feed.commentCount %></td>
                      <td><%= feed.reactionCount %></td>
                    </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
      // Activity Trends Chart
      const activityCtx = document
        .getElementById("activityChart")
        .getContext("2d");
      const activityData = {
        labels: JSON.parse(
          "<%- JSON.stringify(activityTrends.feedTrends.map(t => t.date)) %>"
        ),
        datasets: [
          {
            label: "Feeds",
            data: JSON.parse(
              "<%- JSON.stringify(activityTrends.feedTrends.map(t => t.count)) %>"
            ),
            borderColor: "#fcb813",
            backgroundColor: "rgba(252, 184, 19, 0.1)",
            tension: 0.4,
            fill: true,
          },
          {
            label: "Comments",
            data: JSON.parse(
              "<%- JSON.stringify(activityTrends.commentTrends.map(t => t.count)) %>"
            ),
            borderColor: "#2ecc71",
            backgroundColor: "rgba(46, 204, 113, 0.1)",
            tension: 0.4,
            fill: true,
          },
          {
            label: "Reactions",
            data: JSON.parse(
              "<%- JSON.stringify(activityTrends.reactionTrends.map(t => t.count)) %>"
            ),
            borderColor: "#e74c3c",
            backgroundColor: "rgba(231, 76, 60, 0.1)",
            tension: 0.4,
            fill: true,
          },
        ],
      };

      new Chart(activityCtx, {
        type: "line",
        data: activityData,
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              position: "top",
              labels: {
                color: "#b0b3b8",
              },
            },
          },
          scales: {
            y: {
              grid: {
                color: "rgba(255, 255, 255, 0.1)",
              },
              ticks: {
                color: "#b0b3b8",
              },
            },
            x: {
              grid: {
                color: "rgba(255, 255, 255, 0.1)",
              },
              ticks: {
                color: "#b0b3b8",
              },
            },
          },
        },
      });

      // Content Insights Chart
      const contentCtx = document
        .getElementById("contentChart")
        .getContext("2d");
      const contentData = {
        labels: ["Feeds", "Comments"],
        datasets: [
          {
            label: "Average Length",
            data: [
              JSON.parse(
                "<%- JSON.stringify(contentInsights.feedLengthStats.averageLength) %>"
              ),
              JSON.parse(
                "<%- JSON.stringify(contentInsights.commentLengthStats.averageLength) %>"
              ),
            ],
            backgroundColor: ["#fcb813", "#2ecc71"],
          },
        ],
      };

      new Chart(contentCtx, {
        type: "bar",
        data: contentData,
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              display: false,
            },
          },
          scales: {
            y: {
              grid: {
                color: "rgba(255, 255, 255, 0.1)",
              },
              ticks: {
                color: "#b0b3b8",
              },
            },
            x: {
              grid: {
                color: "rgba(255, 255, 255, 0.1)",
              },
              ticks: {
                color: "#b0b3b8",
              },
            },
          },
        },
      });
    </script>
  </body>
</html>
