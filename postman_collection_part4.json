{
    "name": "Feed Mentions",
    "description": "Endpoints for managing user mentions in feeds",
    "item": [
        {
            "name": "Get Feed Mentions",
            "request": {
                "method": "GET",
                "url": {
                    "raw": "{{base_url}}/api/feed-mentions/feed/123",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "feed-mentions",
                        "feed",
                        "123"
                    ]
                },
                "description": "Get all user mentions in a specific feed."
            }
        },
        {
            "name": "Get User Mentions",
            "request": {
                "method": "GET",
                "url": {
                    "raw": "{{base_url}}/api/feed-mentions/user/123",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "feed-mentions",
                        "user",
                        "123"
                    ]
                },
                "description": "Get all mentions of a specific user across feeds."
            }
        },
        {
            "name": "Get Mention Count",
            "request": {
                "method": "GET",
                "url": {
                    "raw": "{{base_url}}/api/feed-mentions/feed/123/count",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "feed-mentions",
                        "feed",
                        "123",
                        "count"
                    ]
                },
                "description": "Get the total number of mentions in a specific feed."
            }
        },
        {
            "name": "Add Mention",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{access_token}}"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"feed_id\": 123,\n    \"mentioned_user_id\": 456\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/feed-mentions",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "feed-mentions"
                    ]
                },
                "description": "Add a user mention to a feed. Requires authentication."
            }
        },
        {
            "name": "Remove Mention",
            "request": {
                "method": "DELETE",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{access_token}}"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/api/feed-mentions/123/456",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "feed-mentions",
                        "123",
                        "456"
                    ]
                },
                "description": "Remove a user mention from a feed. Requires authentication."
            }
        }
    ]
}