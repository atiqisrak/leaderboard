{
    "name": "Comment Reactions",
    "description": "Endpoints for managing reactions on comments",
    "item": [
        {
            "name": "Get Comment Reactions",
            "request": {
                "method": "GET",
                "url": {
                    "raw": "{{base_url}}/api/comment-reactions/comment/123",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "comment-reactions",
                        "comment",
                        "123"
                    ]
                },
                "description": "Get all reactions for a specific comment."
            }
        },
        {
            "name": "Get User Reactions",
            "request": {
                "method": "GET",
                "url": {
                    "raw": "{{base_url}}/api/comment-reactions/user/123",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "comment-reactions",
                        "user",
                        "123"
                    ]
                },
                "description": "Get all reactions made by a specific user on comments."
            }
        },
        {
            "name": "Get Reaction Counts",
            "request": {
                "method": "GET",
                "url": {
                    "raw": "{{base_url}}/api/comment-reactions/comment/123/counts",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "comment-reactions",
                        "comment",
                        "123",
                        "counts"
                    ]
                },
                "description": "Get the count of each reaction type for a specific comment."
            }
        },
        {
            "name": "Add Reaction",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{access_token}}"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"comment_id\": 123,\n    \"reaction_type\": \"like\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/comment-reactions",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "comment-reactions"
                    ]
                },
                "description": "Add a reaction to a comment. Requires authentication."
            }
        },
        {
            "name": "Remove Reaction",
            "request": {
                "method": "DELETE",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{access_token}}"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/api/comment-reactions/123/like",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "comment-reactions",
                        "123",
                        "like"
                    ]
                },
                "description": "Remove a reaction from a comment. Requires authentication."
            }
        }
    ]
}